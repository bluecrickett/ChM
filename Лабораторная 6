//Лабораторная 6
//Вариант 11
#include <iostream>
#include <math.h>
using namespace std;
#define pi 3.1415926535
int main(){
    int n;
    double h,integral,i=0,s=0;
    cout << "Программа вычисляет интеграл tan(x) на отрезке [0;П/3] методом прямоугольников\n" << "Введите количество разбиений отрезка:";
    cin >> n;
    h = (pi / 3) / n;
    cout << "Длина промежутка n: " << h << endl;
    while (i < (pi / 3)) {
        s = s + tan(i);
        i = i + h;
    }
    integral = s * h;
    cout << "Значение интерграла с данным разбиением равно: "<< integral;
    return 0;
