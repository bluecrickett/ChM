//Лабораторная 3;  Метод простых итераций
//Вариант 9 (x^3-2=ln(x+2)); Отрезок [1;2]
#include <iostream>
#include <cmath>
#define _USE_MATH_DEFINES
using namespace std;
double f(double x){
    double f;
    f = pow(x,3)-2.0-log(x+2.0);
    return f;
}

//Первая производная
double f1(double x){
    double f1;
    f1 = 3*pow(x,2)-1/(x+2);
    return f1;
}

//Вторая производная
double f2(double x){
    double f2;
    f2 = 1/pow((x+2),2)+6*x;
    return f2;
}

int main(){
    int k=0;
    double a=0.0, b=0.0, c=0.0, ya=0.0, yb=0.0, x=0.0;
    cout << "Найдем корень уравнения x^3-2=ln(x+2) с помощью метода простых итераций\nВведите начало отрезка: ";
    cin >> a;
    cout << "Введите конец отрезка: ";
    cin >> b;
    cout << "Введите точность: ";
    cin >> c;
    ya=pow(a,3)-2-log(a+2);
    yb = pow(b,3)-2-log(b+2);
    cout << "Проверим, выполняется ли условие F(a)*F(b)<0: \n";
    if (ya*yb<0){
        cout << "F(a)*F(b) = " << ya*yb << ", значит корень находится в пределах заданного отрезка\n";
        x = b;
        if (f(a)*f2(a)>0){
            x = a;
        }
        while (fabs(f(x) / f1(x)) >= c){
            k++;
            x -= (f(x) / (1.01 * f1(x)));
        }
        cout << "Корень уравнения: " << x << "\n";
        cout << "Количество итераций: " << k;
    }
    else{
        cout << "Корень не принадлежит заданному отрезку"; 
    }
    return 0;
}
